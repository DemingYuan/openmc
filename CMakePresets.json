                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=nvptx64 -Xopenmp-target -march=sm_80 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode -fopenmp-target-new-runtime"
            }
         },
        {
            "name": "llvm_p100",
            "displayName": "LLVM Clang P100",
            "binaryDir": "${sourceDir}/build/llvm_p100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=nvptx64-nvidia-cuda -Xopenmp-target -march=sm_60 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only"
            }
         },
        {
            "name": "llvm_mi100",
            "displayName": "LLVM Clang MI100",
            "binaryDir": "${sourceDir}/build/llvm_mi100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=amdgcn-amd-amdhsa -Xopenmp-target=amdgcn-amd-amdhsa -march=gfx908 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode -DDEVICE_PRINT"
            }
         },
        {
            "name": "nvhpc_v100",
            "displayName": "NVIDIA NVHPC V100",
            "binaryDir": "${sourceDir}/build/nvhpc_v100",
