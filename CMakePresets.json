{
    "version": 2,
    "configurePresets": [
        {
            "name": "spirv",
            "displayName": "Intel GPUs",
            "binaryDir": "${sourceDir}/build/spirv",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icc",
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_CXX_FLAGS": "-fiopenmp -fopenmp-targets=spir64 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode"
            }
        },
        {
            "name": "spirv_aot",
            "displayName": "Intel GPUs w/Ahead of Time (AOT) Compilation",
            "binaryDir": "${sourceDir}/build/spirv_aot",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icc",
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_CXX_FLAGS": "-fiopenmp -fopenmp-targets=spir64_gen -Xopenmp-target-backend \"-device xehp -internal_options -ze-opt-greater-than-4GB-buffer-required -internal_options -ze-opt-large-register-file -internal_options -ze-force-global-mem-allocation -internal_options -ze-no-local-to-generic\" -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode"
            }
        },
        {
            "name": "intel_cpu",
            "displayName": "Intel CPU Offloading",
            "binaryDir": "${sourceDir}/build/intel_cpu",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icc",
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_CXX_FLAGS": "-fiopenmp -gline-tables-only -Dgsl_CONFIG_CONTRACT_CHECKING_OFF"
            }
        },
        {
            "name": "llvm_cpu",
            "displayName": "LLVM Clang CPU Offloading",
            "binaryDir": "${sourceDir}/build/llvm_cpu",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-target-new-runtime -fopenmp-cuda-mode"
            }
         },
        {
            "name": "llvm_v100",
            "displayName": "LLVM Clang V100",
            "binaryDir": "${sourceDir}/build/llvm_v100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=nvptx64 -Xopenmp-target -march=sm_70 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode"
            }
         },
        {
            "name": "llvm_a100",
            "displayName": "LLVM Clang A100",
            "binaryDir": "${sourceDir}/build/llvm_a100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=nvptx64 -Xopenmp-target -march=sm_80 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode"
            }
         },
        {
            "name": "llvm_mi100",
            "displayName": "LLVM Clang MI100",
            "binaryDir": "${sourceDir}/build/llvm_mi100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fopenmp -fopenmp-targets=amdgcn-amd-amdhsa -Xopenmp-target=amdgcn-amd-amdhsa -march=gfx908 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF -gline-tables-only -fopenmp-cuda-mode"
            }
         },
        {
            "name": "nvhpc_v100",
            "displayName": "NVIDIA NVHPC V100",
            "binaryDir": "${sourceDir}/build/nvhpc_v100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "nvc",
                "CMAKE_CXX_COMPILER": "nvc++",
                "CMAKE_CXX_FLAGS": "-mp=gpu -Minfo=mp -gpu=cc70 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF"
            }
         },
        {
            "name": "nvhpc_a100",
            "displayName": "NVIDIA NVHPC A100",
            "binaryDir": "${sourceDir}/build/nvhpc_a100",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "nvc",
                "CMAKE_CXX_COMPILER": "nvc++",
                "CMAKE_CXX_FLAGS": "-mp=gpu -Minfo=mp -gpu=cc80 -Dgsl_CONFIG_CONTRACT_CHECKING_OFF"
            }
         }
    ]
}
